<!--
	Other HashiCorp rulesets:

		- Consul.io
		- Packer.io.xml
		- Vagrant_Cloud.com.xml
		- Vagrantup.com.xml

-->
<ruleset name="HashiCorp.com" default_off="Needs ruleset tests">

	<target host="hashicorp.com" />
	<target host="*.hashicorp.com" />


	<securecookie host="^\.hashicorp\.com$" name=".+" />


	<rule from="^http://(www\.)?hashicorp\.com/"
		to="https://$1hashicorp.com/" />

</ruleset>
